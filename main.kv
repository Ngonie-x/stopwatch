MDScreen:
    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "orange"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Stop Watch'
            icon: 'timer'

            MDBoxLayout:
                orientation: 'vertical'


                MDLabel:
                    id: stopwatch_lbl
                    text: app.stopwatch_time
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_style: 'H2'

                MDScrollView:
                    MDList:
                        id: count_list



                MDFloatLayout:
                    pos_hint: {'center_x': .5}
                    size_hint_y: .3
                    size_hint_x: .5
                    spacing: 50


                    MDIconButton:
                        id: reset_btn
                        icon: 'undo-variant'
                        pos_hint: {'center_x': .2}
                        on_press: app.reset_stopwatch()
                        disabled: True


                    MDIconButton:
                        id: play_pause_btn
                        icon: 'play'
                        pos_hint: {'center_x': .5}
                        on_press: app.start_or_stop_stopwatch()


                    MDIconButton:
                        id: record_lap_btn
                        icon: 'timelapse'
                        pos_hint: {'center_x': .8}
                        on_press: app.time_lap()
                        disabled: True




        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Timer'
            icon: 'timer-sand'

            MDBoxLayout:
                orientation: 'vertical'

                MDGridLayout:
                    cols: 6
                    size_hint_y: 1
                    padding: 20
                    spacing: 15

                    MDTextFieldRect:
                        size_hint: None, None
                        height: "80dp"
                        width: "80dp"
                        multiline: False
                        max_text_length: 2
                        input_filter: "int"    
                        font_size: "50dp"
                        text: "00"
                        halign:"center"

                    MDLabel:
                        text: 'h'
                        size_hint: .35, None
                        height: "30dp"
                        halign:"center"


                    MDTextFieldRect:
                        size_hint: None, None
                        height: "80dp"
                        width: "80dp"
                        multiline: False
                        max_text_length: 2
                        input_filter: "int"
                        font_size: "50dp"
                        text: "00"
                        halign:"center"




                    MDLabel:
                        text: 'm'
                        size_hint: .35, None
                        height: "30dp"
                        halign:"center"


                    MDTextFieldRect:
                        size_hint: None, None
                        height: "80dp"
                        width: "80dp"
                        multiline: False
                        max_text_length: 2
                        input_filter: "int"
                        font_size: "50dp"
                        text: "00"
                        halign:"center"


                        

                    MDLabel:
                        text: 's'
                        size_hint: .35, None
                        height: "30dp"
                        halign:"center"


