            halign:"center"

        MDLabel:
            text: 'h'
            size_hint: .35, None
            height: "30dp"
            halign:"center"

        MDTextFieldRect:
            id: d_timer_minute
            size_hint: None, None
            height: "32dp"
            width: "32dp"
            multiline: False
            max_text_length: 2
            input_filter: "int"    
            font_size: "16dp"
            text: "00"
            halign:"center"

        MDLabel:
            text: 'm'
            size_hint: .35, None
            height: "30dp"
            halign:"center"


        MDTextFieldRect:
            id: d_timer_second
            size_hint: None, None
            height: "32dp"
            width: "32dp"
            multiline: False
            max_text_length: 2
            input_filter: "int"    
            font_size: "16dp"
            text: "00"
            halign:"center"

        MDLabel:
            text: 's'
            size_hint: .35, None
            height: "30dp"
            halign:"center"

    MDTextField:
        hint_text: "Timer Name"
        id: timer_name


    MDBoxLayout:
        orientation: 'horizontal'
        spacing: "10dp"


        MDRaisedButton:
            text: "Save"

        MDFlatButton:
            text: "Cancel"

        
