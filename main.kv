MDScreen:
    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "orange"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Stop Watch'
            icon: 'timer'

            MDBoxLayout:
                orientation: 'vertical'


                MDLabel:
                    id: stopwatch_lbl
                    text: app.stopwatch_time
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    font_style: 'H2'

                MDScrollView:
                    MDList:
                        id: count_list

                        TwoLineIconListItem:
                            text: "Count 3: 00:12:43"
                            secondary_text: "00:05:43"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            secondary_theme_text_color: "Custom"
                            secondary_text_color: 1, 1, 1, 1

                            IconLeftWidget:
                                icon: "av-timer"

                        TwoLineIconListItem:
                            text: "Count 2: 00:07:43"
                            secondary_text: "00:04:43"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            secondary_theme_text_color: "Custom"
                            secondary_text_color: 1, 1, 1, 1

                            IconLeftWidget:
                                icon: "av-timer"  

                        TwoLineIconListItem:
                            text: "Count 1: 00:03:43"
                            secondary_text: "00:03:43"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            secondary_theme_text_color: "Custom"
                            secondary_text_color: 1, 1, 1, 1

                            IconLeftWidget:
                                icon: "av-timer" 


                MDFloatLayout:
                    pos_hint: {'center_x': .5}
                    size_hint_y: .3
                    size_hint_x: .5
                    spacing: 50


                    MDIconButton:
                        id: reset_btn
                        icon: 'undo-variant'
                        pos_hint: {'center_x': .2}
                        on_press: app.reset_stopwatch()
                        disabled: True


                    MDIconButton:
                        id: play_pause_btn
                        icon: 'play'
                        pos_hint: {'center_x': .5}
                        on_press: app.start_or_stop_stopwatch()


                    MDIconButton:
                        id: record_lap_btn
                        icon: 'timelapse'
                        pos_hint: {'center_x': .8}
                        disabled: True




        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Timer'
            icon: 'timer-sand'

            MDLabel:
                text: 'Timer'
                halign: 'center'

        