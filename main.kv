#:kivy 2.1.0

MDScreenManager:
    MDScreen:
        name: 'main_screen'

        MDBottomNavigation:
            selected_color_background: "orange"
            text_color_active: "lightgrey"

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Stop Watch'
                icon: 'timer'

                MDBoxLayout:
                    orientation: 'vertical'


                    MDLabel:
                        id: stopwatch_lbl
                        text: app.stopwatch_time
                        halign: 'center'
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        font_style: 'H2'

                    MDScrollView:
                        MDList:
                            id: count_list



                    MDFloatLayout:
                        pos_hint: {'center_x': .5}
                        size_hint_y: .3
                        size_hint_x: .5
                        spacing: 50


                        MDIconButton:
                            id: reset_btn
                            icon: 'undo-variant'
                            pos_hint: {'center_x': .2}
                            on_press: app.reset_stopwatch()
                            disabled: True


                        MDIconButton:
                            id: play_pause_btn
                            icon: 'play'
                            pos_hint: {'center_x': .5}
                            on_press: app.start_or_stop_stopwatch()


                        MDIconButton:
                            id: record_lap_btn
                            icon: 'timelapse'
                            pos_hint: {'center_x': .8}
                            on_press: app.time_lap()
                            disabled: True




            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Timer'
                icon: 'timer-sand'


                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        right_action_items: [["plus", lambda x: app.show_add_timer_dialog()]]
                        md_bg_color: app.theme_cls.bg_dark

                    MDGridLayout:
                        cols: 6
                        size_hint_y: .4
                        padding: 20
                        spacing: 15

                        MDTextFieldRect:
                            id: timer_hour
                            size_hint: None, None
                            height: "80dp"
                            width: "80dp"
                            multiline: False
                            max_text_length: 2
                            input_filter: "int"    
                            font_size: "50dp"
                            text: "00"
                            halign:"center"

                        MDLabel:
                            text: 'h'
                            size_hint: .35, None
                            height: "30dp"
                            halign:"center"


                        MDTextFieldRect:
                            id: timer_minute
                            size_hint: None, None
                            height: "80dp"
                            width: "80dp"
                            multiline: False
                            max_text_length: 2
                            input_filter: "int"
                            font_size: "50dp"
                            text: "00"
                            halign:"center"




                        MDLabel:
                            text: 'm'
                            size_hint: .35, None
                            height: "30dp"
                            halign:"center"


                        MDTextFieldRect:
                            id: timer_second
                            size_hint: None, None
                            height: "80dp"
                            width: "80dp"
                            multiline: False
                            max_text_length: 2
                            input_filter: "int"
                            font_size: "50dp"
                            text: "00"
                            halign:"center"


                            

                        MDLabel:
                            text: 's'
                            size_hint: .35, None
                            height: "30dp"
                            halign:"center"

                    MDScrollView:
                        MDList:
                            id: timer_list

                    
                    MDFloatLayout:
                        size_hint: 1, .3


                        MDIconButton:
                            icon: 'undo-variant'
                            pos_hint: {'center_x': .2}
                            on_release: app.clear_timer()


                        MDIconButton:
                            icon: 'play'
                            pos_hint: {'center_x': .5}
                            on_release: app.start_timer()

    MDScreen:
        name: 'timer_screen'

        MDBoxLayout:
            orientation: 'vertical'
            spacing: '10dp'

            MDTopAppBar:
                left_action_items: [["keyboard-backspace", lambda x: app.back_to_main_screen()]]
                md_bg_color: app.theme_cls.bg_dark

            MDLabel:
                id: timer_lbl
                text: app.timer_time
                halign: 'center'
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_style: 'H2'

            MDFloatLayout:
                pos_hint: {'center_x': .5}
                size_hint_y: .3
                size_hint_x: .5
                spacing: 50

                MDIconButton:
                    id: timer_reset_btn
                    icon: 'undo-variant'
                    disabled: True
                    pos_hint: {'center_x': .2}
                    on_release: app.reset_timer()


                MDIconButton:
                    id: timer_pause_btn
                    icon: 'pause'
                    pos_hint: {'center_x': .5}
                    on_release: app.start_or_stop_timer()




<Content>
    orientation: 'vertical'
    size_hint: 1, None
    height: "400dp"

    MDGridLayout:
        cols: 6

        MDTextFieldRect:
            id: d_timer_hour
            size_hint: None, None
            height: "32dp"
            width: "32dp"
            multiline: False
            max_text_length: 2
            input_filter: "int"    
            font_size: "16dp"
            text: "00"
            halign:"center"

        MDLabel:
            text: 'h'
            size_hint: .35, None
            height: "30dp"
            halign:"center"

        MDTextFieldRect:
            id: d_timer_minute
            size_hint: None, None
            height: "32dp"
            width: "32dp"
            multiline: False
            max_text_length: 2
            input_filter: "int"    
            font_size: "16dp"
            text: "00"
            halign:"center"

        MDLabel:
            text: 'm'
            size_hint: .35, None
            height: "30dp"
            halign:"center"


        MDTextFieldRect:
            id: d_timer_second
            size_hint: None, None
            height: "32dp"
            width: "32dp"
            multiline: False
            max_text_length: 2
            input_filter: "int"    
            font_size: "16dp"
            text: "00"
            halign:"center"

        MDLabel:
            text: 's'
            size_hint: .35, None
            height: "30dp"
            halign:"center"

    MDTextField:
        hint_text: "Timer Name"
        id: timer_name

    MDGridLayout:
        id: chip_box
        cols: 2
        adaptive_size: True

        MDChip:
            text: "Timer"
            icon_left: 'timer-sand'
            on_active: if self.active: root.removes_marks_all_chips(self)

        MDChip:
            text: "Meeting"
            icon_left: 'presentation'
            on_active: if self.active: root.removes_marks_all_chips(self)

        MDChip:
            text: "Sleep"
            icon_left: 'moon-waning-crescent'
            on_active: if self.active: root.removes_marks_all_chips(self)

        MDChip:
            text: "Exercise"
            icon_left: 'dumbbell'
            on_active: if self.active: root.removes_marks_all_chips(self)

        MDChip:
            text: "Mindfulness"
            icon_left: 'bullseye-arrow'
            on_active: if self.active: root.removes_marks_all_chips(self)

        MDChip:
            text: "Work"
            icon_left: 'briefcase'
            on_active: if self.active: root.removes_marks_all_chips(self)


    MDBoxLayout:
        orientation: 'horizontal'
        spacing: "10dp"


        MDRaisedButton:
            text: "Save"
            on_release: (app.add_timer(timer_name.text, d_timer_hour.text, d_timer_minute.text, d_timer_second.text, chip_box), root.reset_timer_dialog())

        MDFlatButton:
            text: "Cancel"
            on_release: (app.close_dialog(), root.reset_timer_dialog())


    


